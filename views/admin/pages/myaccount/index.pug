extends ../../layouts/default.pug

block content
  h1.text-center.mb-4 Thông tin người dùng

  .card.p-4(style="max-width: 600px; margin: 0 auto;")
    .card-body.text-center
      if user.avatar
        img(
          src=user.avatar, 
          alt="Avatar", 
          width="120", 
          height="120", 
          style="border-radius: 50%; margin-bottom: 20px; object-fit: cover;"
        )

      ul.list-unstyled.text-start
        li.mb-2
          strong Họ tên: 
          |  #{user.fullName}
        li.mb-2
          strong Tên đăng nhập: 
          |  #{user.userName}
        li.mb-2
          strong Email: 
          |  #{user.email}
        li.mb-2
          strong Số điện thoại: 
          |  #{user.phone}
        if role
          li.mb-2
            strong Quyền hạn: 
            |  #{role.title}
        li.mb-2
          strong Trạng thái: 
          |  #{user.status}

    a.btn.btn-primary.mt-3(
      href=`${prefixAdmin}/my-account/edit`
    ) 
      i.fas.fa-edit.mr-2
      | Chỉnh sửa thông tin
  script(src="/admin/js/product.js")