extends ../../layouts/default.pug
block content
  h1.mb-4 Thêm mới nhóm quyền

  form(action=`${prefixAdmin}/roles/create`, method="POST")
    //- Nhập tiêu đề
    .form-group
      label(for="title") Tiêu đề
      input#title.form-control(
        type="text",
        name="title",
        required
      )

    //- Nhập mô tả
    .form-group
      label(for="desc") Mô tả
      input#desc.form-control(
        type="text",
        name="description"
      )

    //- Nút tạo mới
    .form-group
      button.btn.btn-primary(type="submit") Tạo mới
      
