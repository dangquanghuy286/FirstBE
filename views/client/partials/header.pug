include ../mixins/sub-menu.pug
header.header
  .container
    .logo
      img(src="images/favicon.png", alt="Logo", width="50")
      h1 My Website
    nav.nav
      ul.menu
        li: a(href="/") Trang chủ
        li
          -const pathProduct="/products"
          a(href=pathProduct) Sản phẩm
          +sub-menu(records,pathProduct)
          
    .search 
      form(action="/search"
      method="GET")
        div(class="form-group d-flex mb-0")
          input(type="text"
          placeholder="Nhập từ khóa"
          class="form-control"
          name="keyword"
          value=keyword)
          button(type="submit"
          class="btn btn-primary"
          ) Tìm 
    .auth
      a.btn(href="/login") Đăng nhập
