extends ../../layouts/layoutDefault.pug
include ../../mixins/alert.pug

block content
  .container.py-5
    .row.justify-content-center
      .col-md-6
        h2.text-center.text-primary.mb-4 Đổi mật khẩu

        +alert-success("5000")
        +alert-error("5000")

        form(action="/user/password/reset-password" method="POST")
          input(type="hidden", name="email", value=email)

          .mb-3
            label.form-label.text-info(for="newPassword") Mật khẩu mới
            input#newPassword.form-control(type="password", name="newPassword", required)

          .mb-3
            label.form-label.text-info(for="confirmPassword") Xác nhận mật khẩu mới
            input#confirmPassword.form-control(type="password", name="confirmPassword", required)

          button.btn.btn-primary.w-100(type="submit") Đổi mật khẩu
