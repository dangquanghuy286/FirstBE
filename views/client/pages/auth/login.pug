extends ../../layouts/layoutDefault.pug
include ../../mixins/alert.pug

block content
  .container.min-vh-100.d-flex.align-items-center.justify-content-center.py-4
    .card.w-100.bg-white.border.border-secondary.rounded-3.p-4.shadow-sm(style="max-width: 400px;")
      h2.text-center.mb-4.text-primary.fs-2.fw-bold Đăng Nhập

      form(method="POST" action="/login")
        //- Tên đăng nhập
        .mb-3.position-relative
          label.d-none(for="user_name") Tên Đăng Nhập
          .input-group
            span.input-group-text
              i.fas.fa-user.text-primary
            input#user_name.form-control.form-control-lg(
              type="text"
              name="user_name"
              placeholder="Tên Đăng Nhập"
              aria-label="Tên Đăng Nhập"
            )
          if error_user_name
            p.text-danger.small.mt-1 #{error_user_name}

        //- Mật khẩu
        .mb-3.position-relative
          label.d-none(for="password") Mật khẩu
          .input-group
            span.input-group-text
              i.fas.fa-lock.text-primary
            input#password.form-control.form-control-lg(
              type="password"
              name="password"
              placeholder="Mật khẩu"
              aria-label="Mật khẩu"
            )
          if error_password
            p.text-danger.small.mt-1 #{error_password}

        //- Ghi nhớ & Quên mật khẩu
        .d-flex.align-items-center.justify-content-between.mb-3
          .form-check
            input#remember.form-check-input(type="checkbox" name="remember")
            label.form-check-label.text-primary(for="remember") Ghi nhớ tôi
          a.text-primary.text-decoration-none(href="/sendEmail" class="hover:text-decoration-underline")
            |Quên mật khẩu

        //- Submit
        button.btn.btn-primary.w-100.py-2.fw-semibold(type="submit") Đăng nhập

      .d-flex.align-items-center.justify-content-center.my-3.text-primary
        span — hoặc —

      a.btn.btn-outline-primary.w-100.py-2.fw-semibold.d-flex.align-items-center.justify-content-center.gap-2.text-decoration-none(
        href="http://localhost:8088/oauth2/authorization/google"
      )
        i.fab.fa-google.fs-5
        | Đăng nhập bằng Google

      p.text-center.text-primary.mt-3
        | Chưa có tài khoản? 
        a(href="/user/register" class="fw-bold text-info text-decoration-none hover:text-decoration-underline") Đăng ký