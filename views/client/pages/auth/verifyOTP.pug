extends ../../layouts/layoutDefault.pug
include ../../mixins/alert.pug
block content
  .bg-white.py-5
    .container
      .mx-auto.p-4.bg-white.border.border-secondary.rounded.shadow(style="max-width: 500px;")
        .d-flex.align-items-center.gap-3.mb-4
          i.fas.fa-arrow-left.text-primary.fs-4.cursor-pointer(
            onclick="window.location.href='/user/password/sendEmail'"
          )
          p.fs-3.fw-bold.text-dark.mb-0 Mã OTP Đã Gửi Đến Email
        +alert-error(error)
        +alert-success(success)
        .form-group.mb-4
          label(for="email") Email
          input#email.form-control(
            type="email",
            name="email",
            value=email,
            readonly,
            required
          )
        form(method="POST" action="/user/password/verify-otp")
          input(type="hidden" name="email" value=email)
          .d-flex.justify-content-between.mb-4
            each val, index in [1,2,3,4,5,6]
              input.form-control.text-center.fs-4.fw-bold.otp-input(
                type="text",
                name="otp[]",
                maxlength="1",
                required,
                style="width: 45px; height: 55px;"
              )
          button.btn.btn-primary.fw-semibold.rounded-pill.w-100(
            type="submit",
            disabled=loading ? true : false
          ) #{loading ? 'Đang Xác Thực...' : 'Xác Nhận'}