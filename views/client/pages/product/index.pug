extends ../../layouts/layoutDefault.pug

block content
  h1 Product List
  .product-grid
    each product in products
      .product-item
        .card.h-100.product-card
          if product.thumbnail
            img.card-img-top(src=product.thumbnail, alt=product.title)
          else
            .card-img-top.no-thumbnail
              i.fas.fa-image
          .card-body
            h5.card-title 
              a(href=`/products/${product.slug}`)= product.title
            .card-text
              p.mb-2
                strong ID: 
                span.product-id= product._id
              p.mb-2
                strong Price: 
                span.price-tag $#{product.price}
              p.mb-0
                strong Description: 
                span.description-text !{product.description}

