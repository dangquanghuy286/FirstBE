extends ../../layouts/layoutDefault.pug
include ../../mixins/alert.pug

block content
  .container.my-3
    h3.box-head Danh sách phòng chat
    .row.mb-3
      .col-12
        a.btn.btn-sm.btn-success.mr-1(href="/rooms-chat/create") Tạo phòng chat

    .row
      each room in listRoom
        .col-6.col-md-4.col-lg-3.mb-3
          .box-room.p-3.rounded.shadow-sm
            .inner-avatar.mb-2
              img(
                src="https://robohash.org/#{room._id}.png"
                alt=room.title
                style="width: 80px; height: 80px; object-fit: cover; border-radius: 50%;"
              )
            .inner-info
              .inner-name.mb-1 #{room.title}
              .inner-buttons
                a.btn.btn-sm.btn-primary.mr-1(href=`/chat/${room._id}`) Nhắn tin
