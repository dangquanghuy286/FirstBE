mixin alert-success(time)
    - if (messages.success)
      .message.info
      div(
        class="alert alert-success"
        showAlert
        data-time=time
      ) #{messages.success}
        span(close-alert) X
mixin alert-error(time)
    - if (messages.error)
      .message.info
      div(
        class="alert alert-danger"
        showAlert
        data-time=time
      ) #{messages.error}
        span(close-alert) X